<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:background="@color/black">

    <LinearLayout
        android:id="@+id/makePlan_mainLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Your Perfect Workout Plan"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp" />

        <!-- Plan Name -->
        <EditText
            android:id="@+id/makePlan_PlanNameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Workout Plan Name"
            android:background="@drawable/edittext_background"
            android:inputType="text"
            android:minHeight="48dp"
            android:layout_marginBottom="16dp" />

        <!-- Category -->
        <EditText
            android:id="@+id/makePlan_categoryEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Category (e.g., Gym, Park, Home)"
            android:background="@drawable/edittext_background"
            android:inputType="text"
            android:minHeight="48dp"
            android:layout_marginBottom="16dp" />

        <!-- Level Selector -->
        <Spinner
            android:id="@+id/makePlan_levelSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_background"
            android:entries="@array/levels"
            android:minHeight="48dp"
            android:prompt="@string/select_level"
            android:layout_marginBottom="16dp" />

        <!-- Button to Add Workout -->
        <Button
            android:textSize="20dp"
            android:id="@+id/makePlan_addWorkoutButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Workout"

            android:background="@drawable/button_background"
            android:textColor="@color/black"
            android:layout_marginBottom="16dp" />

        <!-- Button to Submit Plan -->
        <Button
            android:id="@+id/makePlan_submitPlanButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit My Plan"
            android:background="@drawable/button_background"
            android:textColor="@color/black"
            android:textSize="20dp"/>

    </LinearLayout>
</ScrollView>


